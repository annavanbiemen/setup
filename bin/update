#!/bin/bash

# Exit on errors
set -euo pipefail

# Import libraries
source "$(dirname "$(dirname "$(realpath "${BASH_SOURCE[0]}")")")/lib/standard.sh"

# Initialize variables
update_dir="${HOME}/.updaterc.d"
update_user="$(whoami)"
update_sudoers_file="/etc/sudoers.d/90-update-${update_user}"

# Add named update command
#
# Usage: update::add <name> <command>
#
# Arguments:
#   name     Name can only contain alphanumeric characters, dashes and underscores
#   command  Command to add
update::add() {
    # Read arguments
    local name="$1"
    local command="$2"

    # Check name
    if [[ ! "${name}" =~ ^[[:alnum:]_-]+$ ]]; then
        standard::raise "Name can only contain letters, numbers, dashes and underscores"
    fi

    # Create directory
    if [[ ! -d "${update_dir}" ]]; then
        mkdir -p "${update_dir}"
    fi

    # Write file
    local file="${update_dir}/${name}"
    echo "${command}" > "${file}"
}

# Remove named update command
update::remove() {
    # Read arguments
    local name="$1"

    # Check name
    if [[ ! "${name}" =~ ^[[:alnum:]_-]+$ ]]; then
        standard::raise "Name can only contain letters, numbers, dashes and underscores"
    fi

    # Remove file
    local file="${update_dir}/${name}"
    if [[ -f "${file}" ]]; then
        rm "${file}"
    fi
}

# Install sudoers
update::install_sudoers() {
    local tempfile

    tempfile="$(mktemp)"
    trap 'rm -f "${tempfile}"' EXIT
    {
        echo "${update_user} ALL=(ALL) NOPASSWD: /usr/bin/apt-get full-upgrade --update --auto-remove --purge --yes"
        echo "${update_user} ALL=(ALL) NOPASSWD: /usr/bin/snap refresh"
    } > "${tempfile}"
    visudo -c "${tempfile}"
    echo "Writing ${update_sudoers_file}"
    sudo install -o root -g root -m 440 "${tempfile}" "${update_sudoers_file}"
}

# Update
#
# Usage: update::execute
update::execute() {
    local bold="\e[1m"
    local red="\e[31m"
    local reset="\e[0m"

    if [[ ! -f "${update_sudoers_file}" ]]; then
        echo -e "Tired of password prompts? Run ${bold}update --install-sudoers${reset}"
        echo
    fi

    # apt
    echo -e "${bold}# apt${reset}"
    /usr/bin/sudo /usr/bin/apt-get full-upgrade --update --auto-remove --purge --yes

    # snap
    if command -v snap &> /dev/null; then
        echo
        echo -e "${bold}# snap${reset}"
        /usr/bin/sudo /usr/bin/snap refresh
    fi

    # Source update commands
    shopt -s nullglob
    for file in "${update_dir}"/*; do
        # Validate file ownership and permissions for security
        if [[ ! -O "${file}" ]]; then
            echo -e "${red}Warning: Skipping ${file} (not owned by current user)${reset}" >&2
            continue
        fi
        if [[ -w "${file}" ]] && [[ $(stat -c '%a' "${file}") =~ [0-9][0-9][2367] ]]; then
            echo -e "${red}Warning: Skipping ${file} (world-writable)${reset}" >&2
            continue
        fi

        echo
        echo -e "${bold}# $(basename "${file}")${reset}"
        # shellcheck source=/dev/null
        source "${file}"
    done
    shopt -u nullglob

    # Warn about reboot
    if [[ -f /var/run/reboot-required ]]; then
        echo -e "${red}"
        cat /var/run/reboot-required
        echo -e "${reset}"
    fi
}

# Update script
#
# Usage: update [options]
#
# Options:
#   -a, --add <name> <command>  Add named update command
#   -d, --debug                 Show debug information
#   -h, --help                  Show help information
#   -r, --remove <name>         Remove named update command"
#   -i, --install-sudoers       Install sudoers file to prevent password prompts"
#   -v, --version               Show version information
#
# Arguments:
#   name     Name can only contain alphanumeric characters, dashes and underscores
#   command  Command to add
update::main() {
    while [[ "$#" -gt 0 ]]; do
        case "$1" in
        -a | --add)
            if [[ "$#" -lt 3 ]]; then
                standard::raise "Missing required arguments for --add"
            fi
            update::add "$2" "$3"
            return
            ;;
        -d | --debug)
            standard::debug
            ;;
        -h | --help)
            standard::help update::main
            return
            ;;
        -i | --install-sudoers)
            update::install_sudoers
            return
            ;;
        -r | --remove)
            if [[ "$#" -lt 2 ]]; then
                standard::raise "Missing required argument for --remove"
            fi
            update::remove "$2"
            return
            ;;
        -v | --version)
            standard::version
            return
            ;;
        -*)
            standard::raise "Unknown option passed: $1"
            ;;
        *)
            standard::raise "Unknown argument passed: $1"
            ;;
        esac
        shift
    done

    update::execute
}

# Invoke main entrypoint
update::main "$@"
