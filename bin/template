#!/bin/bash

# Exit on errors
set -euo pipefail

# Import libraries
source "$(dirname "$(dirname "$(realpath "${BASH_SOURCE[0]}")")")/lib/standard.sh"

# Template script
#
# Usage: template [options]
#
# Options:
#   -d, --debug     Show debug output
#   -h, --help      Show usage information
#   -v, --version   Show version information
main() {
    # Parse arguments
    while [[ "$#" -gt 0 ]]; do
        case "$1" in
        -d | --debug)
            standard::debug
            ;;
        -h | --help)
            standard::usage "$@"
            return
            ;;
        -v | --version)
            standard::version "$@"
            return
            ;;
        -*) standard::raise standard::error "Unknown option passed: $1" ;;
        *) standard::raise standard::error "Unknown argument passed: $1" ;;
        esac
        shift
    done
}

# Invoke main entrypoint
main "$@"
