#!/bin/bash

# Exit on errors
set -euo pipefail

# Import libraries
source "$(dirname "$(dirname "$(realpath "${BASH_SOURCE[0]}")")")/lib/standard.sh"

# Require APT packages (optionally from custom sources)
#
# Usage: require-apt [packages] [options]
#
# Options:
#   --source SOURCE        Descriptive source name
#   --uri URI              Package URI
#   --key KEY              Key URI (can be an ASCII-armored or binary GPG key)
#   --suite SUITE          Suite                    (e.g. 'noble')
#   --suite-codename       Use current Ubuntu codename as suite
#   --component COMPONENT  Component                (e.g. 'stable', 'main')
#   --arch ARCH            Optional architecture    (e.g. 'amd64')
#   --language LANGUAGE    Optional language codes  (e.g. 'en de')
#   --help                 Display this help message
#
# Arguments:
#   packages  APT packages to install
#
# When --source is specified, you must also specify --uri, --key, and --component
main() {
    # Handle help flag
    if [[ "$#" -eq 0 ]] || [[ "${1:-}" == "--help" ]]; then
        standard::help main
        return 0
    fi

    # Parse arguments
    local packages=()
    local source_name=""
    local source_uri=""
    local source_key=""
    local source_arch
    source_arch="$(dpkg --print-architecture)"
    local source_suite="stable"
    local source_component="main"
    local source_lang=""

    while [[ "$#" -gt 0 ]]; do
        case $1 in
        --source)
            source_name="$2"
            shift
            ;;
        --uri)
            source_uri="$2"
            shift
            ;;
        --key)
            source_key="$2"
            shift
            ;;
        --arch)
            source_arch="$2"
            shift
            ;;
        --suite)
            source_suite="$2"
            shift
            ;;
        --suite-codename)
            source_suite=$(. /etc/os-release && echo "${UBUNTU_CODENAME:-${VERSION_CODENAME}}")
            ;;
        --component)
            source_component="$2"
            shift
            ;;
        --language)
            source_lang="$2"
            shift
            ;;
        -*)
            standard::raise "Unknown parameter passed: $1"
            ;;
        *) packages+=("$1") ;;
        esac
        shift
    done

    if [[ -n "${source_name}" ]]; then

        # Validate required arguments
        if [[ -z "${source_uri}" ]] || [[ -z "${source_key}" ]] || [[ -z "${source_component}" ]]; then
            standard::raise "Missing required arguments. When --source is specified, you must also specify --uri, --key, and --component"
        fi

        require-apt ca-certificates gpg gpg-agent

        # Source paths
        local SOURCE_DIR="/etc/apt/sources.list.d"
        local SOURCE_FILE="${SOURCE_DIR}/${source_name}.sources"

        # --- Download the GPG key into a variable ---
        echo "Downloading GPG key from ${source_key}..."
        local GPG_HOME
        GPG_HOME=$(mktemp -d)
        trap 'rm -rf "${GPG_HOME}"' EXIT
        local GPG_KEY_ORIGINAL="${GPG_HOME}/key.gpg"
        local GPG_KEY_ARMORED="${GPG_HOME}/key.asc"
        curl --proto '=https' --tlsv1.2 -fsSL "${source_key}" > "${GPG_KEY_ORIGINAL}"
        gpg --homedir "${GPG_HOME}" --import "${GPG_KEY_ORIGINAL}"
        gpg --homedir "${GPG_HOME}" --export --armor > "${GPG_KEY_ARMORED}"

        # Create the sources file in DEB822 format with the embedded key
        echo -e "\e[1mWriting ${SOURCE_FILE}\e[0m"
        {
            echo "Types: deb"
            echo "URIs: ${source_uri}"
            echo "Suites: ${source_suite}"
            echo "Components: ${source_component}"
            echo "Architectures: ${source_arch}"
            if [[ -n "${source_lang}" ]]; then
                echo "Languages: ${source_lang}"
            fi
            echo "Signed-By: |"
            sed 's/^/ /' "${GPG_KEY_ARMORED}"
        } | sudo tee "${SOURCE_FILE}"
    fi

    # Collect missing packages
    local missing=()
    local package
    for package in "${packages[@]}"; do
        if ! dpkg-query -W -f='${Status}' "${package}" 2> /dev/null | grep -q "install ok installed"; then
            missing+=("${package}")
        fi
    done

    # Install missing packages
    if [[ ${#missing[@]} -gt 0 ]]; then
        export DEBIAN_FRONTEND=noninteractive
        local command="sudo apt-get install --update --yes --no-install-recommends"
        echo -e "\e[1m${command}" "${missing[@]}" "\e[0m"
        ${command} "${missing[@]}"
    fi
}

# Invoke main entrypoint
main "$@"
